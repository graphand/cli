{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom", "es2017"],
    "target": "esnext",
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "declarationDir": "dist/types",
    "typeRoots": ["node_modules/@types", "src/types"],
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
